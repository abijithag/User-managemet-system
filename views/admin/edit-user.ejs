<%- include('../layouts/header.ejs') %>
<form class="mx-1 mx-md-4" action="/admin/edit-user" method="post">
  
    <div class="d-flex flex-row align-items-center mb-4">
      <i class="fas fa-user fa-lg me-3 fa-fw"></i>
      <div class="form-outline flex-fill mb-0">
        <input type="text" id="form3Example1c" class="form-control" name="name" value="<%=user.name%>" />
        <label class="form-label" for="form3Example1c">Name</label>
      </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
      <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
      <div class="form-outline flex-fill mb-0">
        <input type="email" id="form3Example3c" class="form-control" name="email" value="<%=user.email%>" />
        <label class="form-label" for="form3Example3c">Email</label>
      </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
          <input type="text" id="form3Example3c" class="form-control" name="mno" value="<%=user.mobile%>" />
          <label class="form-label" for="form3Example3c">Mobile Number</label>
        </div>
      </div>  
      <input type="hidden" name="id" value="<%=user._id%>">


    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
      <button type="submit" class="btn btn-primary btn-lg">Update</button>
    </div>

    <a href="/admin/home">Go back to home</a>

  </form>

<%- include('../layouts/footer.ejs') %>
